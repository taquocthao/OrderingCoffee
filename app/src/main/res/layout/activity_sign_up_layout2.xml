<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpView.SignUpLayout2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/size15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvConfirmAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="@dimen/size15"
            android:fontFamily="Arial"
            android:text="Confirm Address"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/layout_address_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size3"
                android:background="@drawable/background_white">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_country_register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/size3">

                </android.support.v7.widget.AppCompatSpinner>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size3"
                android:background="@drawable/background_white">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_city_register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/size3">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size3"
                android:background="@drawable/background_white">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_district_register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/size3">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size3"
                android:background="@drawable/background_white">

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spinner_ward_register"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/size3">

                </android.support.v7.widget.AppCompatSpinner>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_show_error_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_address_signup"
            android:layout_marginTop="@dimen/size15">
            <TextView
                android:id="@+id/sign_up_error_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:fontFamily="@string/fontArial" />

        </LinearLayout>

        <Button
            android:id="@+id/sign_up_button_create_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_button_login"
            android:text="Create Account" />

    </RelativeLayout>




</RelativeLayout>